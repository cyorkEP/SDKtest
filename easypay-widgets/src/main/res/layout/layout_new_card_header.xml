<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/easypay_add_new_card_header_height">

    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/close_new_card_sheet"
        android:paddingVertical="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_exit_circle_outlined"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/Text.Body.1.SemiBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/new_card"
        android:textColor="@color/easypay_widget_text_foreground"
        app:layout_constraintBottom_toBottomOf="@id/btn_close"
        app:layout_constraintEnd_toStartOf="@id/btn_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_close" />

</androidx.constraintlayout.widget.ConstraintLayout>